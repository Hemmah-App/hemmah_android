<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/walkthrough_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/walkthrough_helprequest_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/walkthrough_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="asdasdasdasdasdasdasdasdasd"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walkthrough_imageview" />

    <TextView
        android:id="@+id/walkthrough_describtion_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="asdasdasdasdasdasdasdasdasdasdasdasdasfasfasfasfasfasfasfasfasfasfsafasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfasfafasfasfasf"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/walkthrough_header_TV"
        app:layout_constraintTop_toBottomOf="@+id/walkthrough_header_TV"
        app:layout_constraintEnd_toEndOf="@id/walkthrough_header_TV"/>

</androidx.constraintlayout.widget.ConstraintLayout>