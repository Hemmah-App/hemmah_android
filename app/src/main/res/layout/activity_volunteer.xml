<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerActivity">

    <TextView
        android:id="@+id/volunteer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Volunteer"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        />

    <FrameLayout
        android:id="@+id/framentContinar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/volunteer_textView"
        app:layout_constraintBottom_toTopOf="@id/buttomNavigathion"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttomNavigathion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/framentContinar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottomnavigation_menu"
        android:background="@color/purple_500"
        app:itemIconTint="@color/bottom_navigation_item_color"
        app:itemTextColor="@color/bottom_navigation_item_color"
        />

</androidx.constraintlayout.widget.ConstraintLayout>