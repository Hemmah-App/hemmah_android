<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/disabled_requests_Title_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Drive me to the mosque"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/disabled_requests_Description_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hi, my name is Hazem its good to see you,as you might know i have a visual impairment and i'am a muslim too so i need to pray 5 times a day so i need someone who lives near to me so that he can take me with him to the mosque every day my address provided below and thanks in advance"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disabled_requests_Title_TV"/>

        <TextView
            android:id="@+id/disabled_requests_Date_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date of the helpRequest"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disabled_requests_Description_TV"/>

        <TextView
            android:id="@+id/disabled_requests_Address_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disabled_requests_Date_TV"/>

        <ImageView
            android:id="@+id/disabled_requests_options_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/imageviews_selectors"
            android:src="@drawable/options_ic"
            app:layout_constraintBottom_toBottomOf="@+id/disabled_requests_Title_TV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/disabled_requests_Title_TV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
