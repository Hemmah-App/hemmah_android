<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.disabled.HelpFragment">

    <TextView
        android:id="@+id/help_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/disabled_helpfrag_header"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_margin="20sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/help_textView"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/help_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:hint="title"
                app:boxBackgroundColor="@color/transparent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/help_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:hint="description"
                app:boxBackgroundColor="@color/transparent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="12" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/help_choose_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/toggle_date_dishelpfrag"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/help_button_add_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorOnAccent"
                android:text="@string/request_help_bt"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>